{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2017", "dom", "es2017.object"],
    "types": ["mocha", "node", "reflect-metadata", "firebase", "sigmajs"]
  },
  "exclude": [
    "node_modules"
  ]
}