{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2017", "dom", "es2017.object"],
    "types": ["node", "reflect-metadata" ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "make-build-commit.ts"
  ]
}